<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <CalendarView
        android:id="@+id/calendarView2"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weekDayTextAppearance="@color/com_facebook_blue"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="147dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calendarView2"
        android:id="@+id/list_frag_container">

    </FrameLayout>

    <ListView
        android:id="@+id/list_view_monthly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calendarView2"
        android:background="@drawable/list_design"
        android:dividerHeight="0dp"
        android:elevation="30dp"
        android:divider="@android:color/transparent"/>

    <FrameLayout
        android:id="@+id/fragment_container_monthly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calendarView2">

    </FrameLayout>


</RelativeLayout>