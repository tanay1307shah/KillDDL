<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<Button-->
            <!--/>-->


            <!--<view-->
            <!--android:id="@+id/view3"-->
            <!--android:layout_width="350dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_above="@+id/view"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:background="#777777" />-->


            <!--<View-->
            <!--android:id="@+id/view"-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignTop="@+id/button5"-->
            <!--android:layout_marginEnd="12dp"-->
            <!--android:layout_toStartOf="@+id/button5"-->
            <!--android:background="#777777" />-->

            <Button
                android:id="@+id/detailsBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/deleteBtn"
                android:text="view details"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/deleteBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/detailsBtn"
                android:background="@drawable/ic_delete_black_24dp"
                android:backgroundTint="#f44242" />

            <Button
                android:id="@+id/statusBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_check_circle_black_24dp"
                app:srcCompat="@drawable/ic_check_circle_black_24dp" />

            <TextView
                android:id="@+id/uniqueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/evetitle"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/statusBtn"
                android:layout_toEndOf="@+id/statusBtn"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeval"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/statusBtn"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sharebtn"
                android:layout_width="75dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="125dp"
                android:layout_marginBottom="6dp"
                android:text="Share" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>